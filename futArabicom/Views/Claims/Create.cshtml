@{
}


@model futArabicom.Areas.Identity.Data.Claims

@{
    ViewData["Title"] = "Create";
}

<h1>إضافة حدث</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Content" class="control-label"> وصف الحدث </label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Source" class="control-label"> المصدر </label>
                <input asp-for="Source" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="claimDate" class="control-label"> تاريخ الحدث </label>
                <input asp-for="claimDate" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" id="submitButton" value="إضافة" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        $(document).ready(function () {
            // Get the URL from the anchor link
            var url = "@Url.Action("Details", "Players", new PlayerDetailsViewModel { pageId = 0 })";

            // Add a click event handler to the button
            $('#submitButton').click(function () {
                // Navigate to the URL when the button is clicked
                window.location.href = url;
            });
        });
    </script>
}
