                            <li class="list-group-item">العمل</li>
                            <li class="list-group-item">التصويت</li>
                        </ul>
                        <div class="card-body">
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 67%" aria-valuenow="67" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    <div class="voting-circle">
                        56%
                    </div>
                    </div>
            </div>
        </div>

