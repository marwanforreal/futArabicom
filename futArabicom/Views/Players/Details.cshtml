@model futArabicom.Models.Player

@{
    ViewData["Title"] = "Details";
}


<div class="d-flex flex-column bd-highlight mb-3 align-items-center bg-light rounded-3">
    <div class="p-2 bd-highlight">
        <p class="display-4">@Html.DisplayFor(model => model.Name)</p>
    </div>

    <div class="row">
        <div class="col-sm-6 m-auto">
            <div class="p-2 bd-highlight">
                <div class="card">
                    <img id="playerCard" src="@Url.Content("~/Images/" + Model.Type + ".png")" class="rounded mx-auto d-block" alt="FutArabi">
                <img id="playerFace" class="align-items-center" src="@ViewBag.imageUrl" />

                <!--I really hate this part, player name and stats and it needs to be fixed.-->
                <div id="playerNameOnCard" class="h3" style="position:absolute;
                            max-width: fit-content;
                            max-height: fit-content;
                            top:57%;
                            container-type: inline-size;
                            white-space: nowrap;
                            right:38%;
                            transform:translate(-50%, -50%);">@Model.Name</div>

                <div id="playerPace" class="h4 fw-bold" style="position:absolute;
                            max-width: fit-content;
                            max-height: fit-content;
                            top:65.5%;
                            container-type: inline-size;
                            white-space: nowrap;
                            right:64%;
                            transform:translate(-50%, -50%);">
                    @Model.Pace
                </div>

                <div id="playerShooting" class="h4 fw-bold" style="position:absolute;
                            max-width: fit-content;
                            max-height: fit-content;
                            top:71.5%;
                            container-type: inline-size;
                            white-space: nowrap;
                            right:63.7%;
                            transform:translate(-50%, -50%);">
                    @Model.Shooting
                </div>

                <div id="playerPassing" class="h4 fw-bold" style="position:absolute;
                            max-width: fit-content;
                            max-height: fit-content;
                            top:77.5%;
                            container-type: inline-size;
                            white-space: nowrap;
                            right:63.7%;
                            transform:translate(-50%, -50%);">
                    @Model.Passing
                </div>

                <div id="playerPhysical" class="h4 fw-bold" style="position:absolute;
                            max-width: fit-content;
                            max-height: fit-content;
                            top:77.5%;
                            container-type: inline-size;
                            white-space: nowrap;
                            right:39.7%;
                            transform:translate(-50%, -50%);">
                    @Model.Physical
                </div>

                <div id="playerDefending" class="h4 fw-bold" style="position:absolute;
                            max-width: fit-content;
                            max-height: fit-content;
                            top:71.5%;
                            container-type: inline-size;
                            white-space: nowrap;
                            right:39.7%;
                            transform:translate(-50%, -50%);">
                    @Model.Defending
                </div>

                <div id="playerDribbling" class="h4 fw-bold" style="position:absolute;
                            max-width: fit-content;
                            max-height: fit-content;
                            top:65.5%;
                            container-type: inline-size;
                            white-space: nowrap;
                            right:39.7%;
                            transform:translate(-50%, -50%);">
                    @Model.Dribbling
                </div>

            </div>
            </div>
        </div>

        <div class="col-sm-6 m-auto p-5">
            <span>السرعة</span>
                <div class="p-2 bd-highlight w-75">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped" role="progressbar" style="width: @Model.Pace%" aria-valuenow="@Model.Pace" aria-valuemin="0" aria-valuemax="100">@Model.Pace</div>
                    </div>
                </div><hr />

            <span>المراوغة</span>
                <div class="p-2 bd-highlight w-75">
                    <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: @Model.Dribbling%" aria-valuenow="@Model.Dribbling" aria-valuemin="0" aria-valuemax="100">@Model.Dribbling</div>
                    </div>
                </div><hr />

            <span>التسديد</span>
                <div class="p-2 bd-highlight w-75">
                    <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: @Model.Shooting%" aria-valuenow="@Model.Shooting" aria-valuemin="0" aria-valuemax="100">@Model.Shooting</div>
                    </div>
                </div><hr />

            <span>الدفاع</span>
                <div class="p-2 bd-highlight w-75">
                    <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: @Model.Defending%" aria-valuenow="@Model.Defending" aria-valuemin="0" aria-valuemax="100">@Model.Defending</div>
                    </div>
                </div><hr />

            <span>القوة الجسدية</span>
                <div class="p-2 bd-highlight w-75">
                    <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: @Model.Physical%" aria-valuenow="@Model.Physical" aria-valuemin="0" aria-valuemax="100">@Model.Physical</div>
                    </div>
                </div><hr />

            <span>التمرير</span>
                <div class="p-2 bd-highlight w-75">
                    <div class="progress">
                    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: @Model.Passing%" aria-valuenow="@Model.Passing" aria-valuemin="0" aria-valuemax="100">@Model.Passing</div>
                    </div>
                </div>
        </div>
    </div>
</div>

