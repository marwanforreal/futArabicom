@model futArabicom.Models.Player

@{
    ViewData["Title"] = "Details";
}

<style>
    #playerImage{
        height: 50%;
        width: 30%;
    }
</style>


<div class="d-flex flex-column bd-highlight mb-3 align-items-center bg-light rounded-3">
    <div class="p-2 bd-highlight">
        <p class="display-4">@Html.DisplayFor(model => model.Name)</p>
    </div>

    <div class="p-2 bd-highlight">
        <img id="playerImage" src="~/Images/playerCard.png" class="rounded mx-auto d-block img-fluid" alt="FutArabi">
    </div>

    <span>السرعة</span>
    <div class="p-2 bd-highlight w-25">
        <div class="progress">
            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: @Model.Pace%" aria-valuenow="@Model.Pace" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>

    <span>المراوغة</span>
    <div class="p-2 bd-highlight w-25">
        <div class="progress">
            <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: @Model.Pace%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>

    <span>التسديد</span>
    <div class="p-2 bd-highlight w-25">
        <div class="progress">
            <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: @Model.Pace%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>

    <span>الدفاع</span>
    <div class="p-2 bd-highlight w-25">
        <div class="progress">
            <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: @Model.Pace%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>

    <span>القوة الجسدية</span>
    <div class="p-2 bd-highlight w-25">
        <div class="progress">
            <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: @Model.Pace%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>

    <span>التمرير</span>
    <div class="p-2 bd-highlight w-25">
        <div class="progress">
            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: @Model.Pace%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>

</div>

