@model futArabicom.Models.PlayerDetailsViewModel

@{
    ViewData["Title"] = "Details";
    var playerId = Model.Player.Id;
}


<div class="d-flex flex-column bd-highlight mb-3 align-items-center bg-light rounded-3">
    <div class="p-2 bd-highlight">
        <p class="display-4">@Html.DisplayFor(model => model.Player.Name)</p>
    </div>

    <div class="row">
        <div class="col-sm-4 m-auto">
            <div class="p-2 bd-highlight">
                    <div class="card p-3">
                        <div class="circle">
                            <img src="@ViewBag.imageUrl" />
                        </div>
                        <div class="card-body">
                        <h5 class="card-title">فلان بن علّان</h5>
                            <p class="card-text">لاعب كرة قدم مصري</p>
                        </div>
                        <ul class="list-group list-group-flush">
