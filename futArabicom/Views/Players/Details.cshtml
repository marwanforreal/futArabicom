@model futArabicom.Models.PlayerDetailsViewModel

@{
    ViewData["Title"] = "Details";
    var playerId = Model.Player.Id;
}


<div class="d-flex flex-column bd-highlight mb-3 align-items-center bg-light rounded-3">
    <div class="p-2 bd-highlight">
        <p class="display-4">@Html.DisplayFor(model => model.Player.Name)</p>
    </div>

    <div class="row">
        <div class="col-sm-6 m-auto">
            <div class="p-2 bd-highlight">
                <div class="card">
                <img id="playerCard" src="@Url.Content("~/Images/" + Model.Player.Type + ".png")" class="rounded mx-auto d-block" alt="FutArabi">
                <img id="playerFace" class="align-items-center" src="@ViewBag.imageUrl" />

                <!--I really hate this part, player name and stats and it needs to be fixed.-->
                <div id="playerNameOnCard" class="h3" style="position:absolute;
                            max-width: fit-content;
                            max-height: fit-content;
                            top:57%;
                            container-type: inline-size;
                            white-space: nowrap;
                            right:38%;
                            transform:translate(-50%, -50%);">@Model.Player.Name</div>

                <div id="playerPace" class="h4 fw-bold" style="position:absolute;
                            max-width: fit-content;
                            max-height: fit-content;
                            top:65.5%;
                            container-type: inline-size;
                            white-space: nowrap;
                            right:64%;
                            transform:translate(-50%, -50%);">
                        @Model.Player.Pace
                </div>

                <div id="playerShooting" class="h4 fw-bold" style="position:absolute;
                            max-width: fit-content;
                            max-height: fit-content;
                            top:71.5%;
                            container-type: inline-size;
                            white-space: nowrap;
                            right:63.7%;
                            transform:translate(-50%, -50%);">
                    @Model.Player.Shooting
                </div>

                <div id="playerPassing" class="h4 fw-bold" style="position:absolute;
                            max-width: fit-content;
                            max-height: fit-content;
                            top:77.5%;
                            container-type: inline-size;
                            white-space: nowrap;
                            right:63.7%;
                            transform:translate(-50%, -50%);">
                    @Model.Player.Passing
                </div>

                <div id="playerPhysical" class="h4 fw-bold" style="position:absolute;
                            max-width: fit-content;
                            max-height: fit-content;
                            top:77.5%;
                            container-type: inline-size;
                            white-space: nowrap;
                            right:39.7%;
                            transform:translate(-50%, -50%);">
                    @Model.Player.Physical
                </div>

                <div id="playerDefending" class="h4 fw-bold" style="position:absolute;
                            max-width: fit-content;
                            max-height: fit-content;
                            top:71.5%;
                            container-type: inline-size;
                            white-space: nowrap;
                            right:39.7%;
                            transform:translate(-50%, -50%);">
                    @Model.Player.Defending
                </div>

                <div id="playerDribbling" class="h4 fw-bold" style="position:absolute;
                            max-width: fit-content;
                            max-height: fit-content;
                            top:65.5%;
                            container-type: inline-size;
                            white-space: nowrap;
                            right:39.7%;
                            transform:translate(-50%, -50%);">
                        @Model.Player.Dribbling
                </div>

            </div>
            </div>
        </div>

        <div class="col-sm-6 m-auto p-5">
            <span>السرعة</span>
                <div class="p-2 bd-highlight w-75">
                    <div class="progress">
                    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: @Model.Player.Pace%" aria-valuenow="@Model.Player.Pace" aria-valuemin="0" aria-valuemax="100">@Model.Player.Pace</div>
                    </div>
                </div><hr />

            <span>المراوغة</span>
                <div class="p-2 bd-highlight w-75">
                    <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: @Model.Player.Dribbling%" aria-valuenow="@Model.Player.Dribbling" aria-valuemin="0" aria-valuemax="100">@Model.Player.Dribbling</div>
                    </div>
                </div><hr />

            <span>التسديد</span>
                <div class="p-2 bd-highlight w-75">
                    <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: @Model.Player.Shooting%" aria-valuenow="@Model.Player.Shooting" aria-valuemin="0" aria-valuemax="100">@Model.Player.Shooting</div>
                    </div>
                </div><hr />

            <span>الدفاع</span>
                <div class="p-2 bd-highlight w-75">
                    <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: @Model.Player.Defending%" aria-valuenow="@Model.Player.Defending" aria-valuemin="0" aria-valuemax="100">@Model.Player.Defending</div>
                    </div>
                </div><hr />

            <span>القوة الجسدية</span>
                <div class="p-2 bd-highlight w-75">
                    <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: @Model.Player.Physical%" aria-valuenow="@Model.Player.Physical" aria-valuemin="0" aria-valuemax="100">@Model.Player.Physical</div>
                    </div>
                </div><hr />

            <span>التمرير</span>
                <div class="p-2 bd-highlight w-75">
                    <div class="progress">
                    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: @Model.Player.Passing%" aria-valuenow="@Model.Player.Passing" aria-valuemin="0" aria-valuemax="100">@Model.Player.Passing</div>
                    </div>
                </div>
            <hr />
            <span class="d-inline-flex">
            <svg xmlns="http://www.w3.org/2000/svg" width="42" height="42" fill="currentColor" class="bi bi-coin" viewBox="0 0 16 16">
                <path d="M5.5 9.511c.076.954.83 1.697 2.182 1.785V12h.6v-.709c1.4-.098 2.218-.846 2.218-1.932 0-.987-.626-1.496-1.745-1.76l-.473-.112V5.57c.6.068.982.396 1.074.85h1.052c-.076-.919-.864-1.638-2.126-1.716V4h-.6v.719c-1.195.117-2.01.836-2.01 1.853 0 .9.606 1.472 1.613 1.707l.397.098v2.034c-.615-.093-1.022-.43-1.114-.9H5.5zm2.177-2.166c-.59-.137-.91-.416-.91-.836 0-.47.345-.822.915-.925v1.76h-.005zm.692 1.193c.717.166 1.048.435 1.048.91 0 .542-.412.914-1.135.982V8.518l.087.02z" />
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                <path d="M8 13.5a5.5 5.5 0 1 1 0-11 5.5 5.5 0 0 1 0 11zm0 .5A6 6 0 1 0 8 2a6 6 0 0 0 0 12z" />
            </svg>
            <p class="h5">&nbsp;اقل سعر حالياً:</p>
                <p class="h5">31,500</p>
            </span>
        </div>
    </div>
</div>

